# Environment configuration for Auto Researcher
# Copy to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# API Keys
# =============================================================================
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
ALPHA_VANTAGE_KEY=...

# =============================================================================
# Database
# =============================================================================
DB_PASSWORD=secure_password_here
DATABASE_URL=postgresql://researcher:${DB_PASSWORD}@localhost:5432/auto_researcher

# =============================================================================
# Redis Cache
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Application Settings
# =============================================================================
LOG_LEVEL=INFO
ENVIRONMENT=development

# Data directories
DATA_DIR=./data
CACHE_DIR=./cache
LOG_DIR=./logs

# =============================================================================
# Model Settings
# =============================================================================
# OpenAI model for analysis
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic model for analysis
ANTHROPIC_MODEL=claude-3-opus-20240229

# Embedding model
EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# Risk Management
# =============================================================================
MAX_POSITION_SIZE=0.10
MAX_SECTOR_EXPOSURE=0.30
MAX_DRAWDOWN=0.20
TARGET_VOLATILITY=0.15

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_EARLY_ADOPTER=true
ENABLE_THEMATIC_ANALYSIS=true
ENABLE_RISK_CONTROLS=true
